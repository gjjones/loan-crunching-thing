{
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "comma-dangle": [
      2,
      "always"
    ],
    "max-len": [
      1,
      80,
      2
    ]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "jsx": true,
    "modules": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "React": true
  }
}
